const tinderUser = {
    id: "123abc",
    name: "Alex",
    isLoggedIn: true
  };
  
  const updatedUser = Object.fromEntries(
  Object.entries(tinderUser).map(([key, value]) => {
    if (typeof value === "boolean") {
      return [key, !value]; // Invert the boolean value
    }
    return [key, value]; // Keep non-boolean values unchanged
  })
);

